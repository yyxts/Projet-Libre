<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="univ.polytech.projetlibre">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_healthcare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.AddRecordActivity" />
        <activity android:name=".Activity.ModificationRemindActivity" />
        <activity android:name=".Activity.ModificationMedicineActivity" />
        <activity android:name=".Activity.MedicineListActivity" />
        <activity android:name=".Activity.UserListActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.AddRemindActivity" />
        <activity
            android:name=".Activity.RemindListActivity"
            android:label="@string/title_activity_remind_list" />

        <receiver android:name=".Tools.AlertReceiver" />
        <receiver android:name=".Tools.NotificationClickReceiver" />

        <activity android:name=".Activity.RecordListActivity" />
        <activity android:name=".Activity.AddUserActivity"></activity>
    </application>

</manifest>